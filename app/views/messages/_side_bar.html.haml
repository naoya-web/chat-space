.side-bar
  .side-bar__new
    .side-bar__new__items
      .side-bar__new__items__name
        = current_user.name
      .side-bar__new__items__icons
        = link_to new_group_path do
          = icon('fas','edit', class: "side-bar__new__items__icons__edit")
        = link_to edit_user_path(current_user) do
          = icon('fas','cog',class: "side-bar__new__items__icons__cog")
  
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__message
        = link_to group_messages_path(group) do
          .side-bar__group-list__message__groups
            =group.name
          .side-bar__group-list__message__comments
            = group.show_last_message

